<header id="HomeSection">
    <h1>Auto Parts</h1>
    <nav>
        <ul>
            <li><a href="#HomeSection">Home</a></li>
            <li><a href="#ProductSection">Products</a></li>
            <li><a href="#ServiceSection">Services</a></li>
            <li><a href="#about">About Us</a></li>
            <li><a href="#contact">Contact Us</a></li>
            <li><a asp-area="" asp-controller="Form" asp-action="Index">Users</a></li>
    </nav>
    <div class="search-bar">
        <input type="text" placeholder="Search...">
    </div>
    <a href="#login" class="sign-in">Sign In</a>
    <a href="#signup" class="sign-up">Sign Up</a>
</header>

<body class="content">
    
    <div class="front">
        <h1>Find Best Quality Parts Here</h1>
        <h2>Explore Our Wide Range Of Customized Parts</h2>
    </div>
    <div class="products" id="ProductSection">
        
            <h1>@ViewBag.data</h1>

            <div class="p1">
            <div class="product-img" id="steering">
                <img src="../images/ss.jpg" alt=" Customized Steering Wheel">
                <h3> Customized Steering Wheel</h3>
                <span class="price">$59.99</span>
            </div>
            <div class="product-img" id="tyre">
                <img src="../images/tyre.jpg" alt="Customized Tyres">
                <h3>Customized Tyres</h3>
                <span class="price">$159.99</span>
            </div>
            <div class="product-img" id="exhauster">
                <img src="../images/download.jpg" alt="Exhausters ">
                <h3>Exhausters</h3>
                <span class="price">$49.99</span>
        </div>
        </div>
        <div class="p2">
            <div class="product-img">
                <img src="../images/bumper.jpg" alt="Bumper">
                <h3>Bumper</h3>
                <span class="price">$39.99</span>
            </div>
            <div class="product-img">
                <img src="../images/hl.jpg" alt="Head Light">
                <h3>Head Light</h3>
                <span class="price">$19.99</span>
            </div>
            <div class="product-img">
                <img src="../images/grille.jpg" alt="Grille">
                <h3>Grille</h3>
                <span class="price">$29.99</span>
            </div>
        </div>
    </div>

    <div class="service" id="ServiceSection">

        <h1>@ViewData["service"]</h1>

        <div class="s1">
            <div class="service-img">
                <img src="../images/carwash.jfif" alt=" Car Wash">
                <h3> Car Wash</h3>
                <span class="price">$9.99</span>
            </div>
            <div class="service-img">
                <img src="../images/oil.jfif" alt="Oil">
                <h3>Oil Change</h3>
                <span class="price">$59.99</span>
            </div>
            <div class="service-img">
                <img src="../images/polish.png" alt="Polish ">
                <h3>Car Polish</h3>
                <span class="price">$99.99</span>
            </div>
        </div>
        
    </div>
    <div class="about" id="about">
        <div class="aboutus">
            <h2>About Us</h2>
        </div>
        <div class="abouttext">
            <p>Welcome to Mian Auto Parts, your ultimate destination for high-quality auto parts and accessories. At Mian Auto Parts, we are passionate about providing car enthusiasts and professionals with top-notch products to enhance your vehicle's' performance and appearance.</p>
        </div>          
        </div>

    <div class="contact" id="contact">
        
        <div class="contacttext">
            <p>Welcome to Mian Auto Parts, your ultimate destination for high-quality auto parts and accessories. At Mian Auto Parts, we are passionate about providing car enthusiasts and professionals with top-notch products to enhance your vehicle's' performance and appearance.</p>
        </div>
        <div class="contactus">
            <h2>Contact Us</h2>
        </div>
    </div>

</body>

<div class="sami" id="signup">
    <h2>Registration</h2>
    <div class="form">
        <form>
            <div class="input-name" id="name">
                <input type="text" placeholder="Your User Name" class="text-name">
                
            </div>
            <div class="input-name" id="email">
                <input type="email" placeholder="Enter email" class="text-name">
            </div>
            <div class="input-name" id="age">
                <input type="number" placeholder="Enter Age" class="text-name">
            </div>
            <div class="input-name" id="password">
                <input type="password" placeholder="Enter password" class="text-name">
            </div>
            
                       
            <div class="input-name">
                <input type="checkbox">
                <label>I agree with terms and conditions</label>
            </div>
            <div class="input-name">
                <input type="button" value="Register Now" class="btn">
            </div>
        </form>
    </div>
</div>

<div class="sami" id="login">
    <h2>LogIn</h2>
    <div class="form">
        <form>
            <div class="input-name">
                <input type="text" placeholder="Your Name or Email" class="text-name">

            </div>
            
            <div class="input-name">
                <input type="password" placeholder="Enter password" class="text-name">
            </div>

            <div class="input-name">
                <input type="button" value="Login" class="btn">
            </div>
        </form>
    </div>
</div>

